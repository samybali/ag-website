<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>19wires | Transformation numérique</title>
        
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <style>
            /* Animations fluides pour les halos de lumière arrière-plan */
            @keyframes blob {
                0% { transform: translate(0px, 0px) scale(1); }
                33% { transform: translate(30px, -50px) scale(1.1); }
                66% { transform: translate(-20px, 20px) scale(0.9); }
                100% { transform: translate(0px, 0px) scale(1); }
            }
            .animate-blob {
                animation: blob 10s infinite alternate;
            }
            .animation-delay-2000 {
                animation-delay: 3s;
            }
            .animation-delay-4000 {
                animation-delay: 6s;
            }
        </style>
	</head>
	<body class="bg-slate-950 text-white min-h-screen flex flex-col items-center justify-center font-sans overflow-hidden relative selection:bg-blue-500/30">
		
        <div class="absolute inset-0 z-0 pointer-events-none">
            <div class="absolute inset-0 opacity-[0.07]" 
                 style="background-image: radial-gradient(#3b82f6 1px, transparent 1px); background-size: 40px 40px;">
            </div>
            
            <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_0%,#020617_80%)]"></div>
        </div>

        <div class="absolute top-1/4 left-1/3 w-96 h-96 bg-blue-600/10 rounded-full blur-[120px] -z-10 animate-blob"></div>
        <div class="absolute bottom-1/4 right-1/3 w-80 h-80 bg-indigo-600/10 rounded-full blur-[120px] -z-10 animate-blob animation-delay-4000"></div>

        <main class="relative z-10 text-center space-y-10 px-6">
            

            <div class="space-y-2">
